{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "camelcase": [2, {"properties": "always"}],
        "curly": ["error", "multi-or-nest"],
        "no-unexpected-multiline": ["error"],
        "lines-around-comment": ["error", { "beforeBlockComment": true }],
        "no-undef" : "off"
    }
}